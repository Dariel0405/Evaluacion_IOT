<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema normal de la app (AppCompat) -->
    <style name="Theme.Evaluacion_2" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Fondo general de las pantallas -->
        <item name="android:windowBackground">@drawable/fondo2</item>
        <item name="android:buttonStyle">@style/Botonneon</item>
    </style>

    <!-- Tema para el arranque (también AppCompat) -->
    <style name="Theme.Evaluacion_2.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Color sólido mientras carga -->
        <item name="android:windowBackground">@color/app_splash_bg</item>

        <!-- Atributos del splash de Android 12+ (no molestan aunque el parent sea AppCompat) -->
        <item name="windowSplashScreenBackground">@color/app_splash_bg</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_nuevo</item>
        <!-- Cuando termine el splash se usará este tema -->
        <item name="postSplashScreenTheme">@style/Theme.Evaluacion_2</item>
    </style>

    <!-- Botón neón -->
    <style name="Botonneon" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/botonneon</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
